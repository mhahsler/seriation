Package: seriation
Type: Package
Title: Infrastructure for Ordering Objects Using Seriation
Version: 1.2-9.1
Date: 20xx-xx-xx
Authors@R: c(
	person("Michael", "Hahsler", role = c("aut", "cre", "cph"),
	    email = "mhahsler@lyle.smu.edu"),
	person("Christian", "Buchta", role = c("aut", "cph")),
